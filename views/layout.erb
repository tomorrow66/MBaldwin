<body>
	<header class="container ovAuto">
			<div class="logo left"><a href="/"><h2 class="inline">Margaret</h2><h1 class="inline"> Baldwin </h1><h3 class="inline pale">playwright</h3></a></div>
				<nav class="utility">
					<ul class="touch right">
							<li><a href="/productions" class="<%= active 'productions' %>" >Productions</a></li>
							<li><a href="/biography" class="<%= active 'biography' %>" >Bio<span class="mobileHide">graphy</span></a></li>
							<li><a href="/latest" class="<%= active 'latest' %>" >Latest</a></li>
							<li><a href="mailto:margaret@margaretbaldwin.com" class="<%= active 'contact' %>">Contact</a></li>
					</ul>
				</nav>
	</header>

	<div id="contentContainer">
			<% if @path == 'index' && @banners %>
			    <div id="wrapper">
			        <div class="slider-wrapper theme-default">
			            <div id="slider" class="nivoSlider">
			            	<% @banners.each do |b| %>
			            		<% if b.link %>
			            			<a href="<%= b.link %>"><img src="/uploads/banners/<%= b.image %>" alt="slider3" data-transition="slideInLeft"></a>
			            		<% else %>			            		
			                	<img src="/uploads/banners/<%= b.image %>" alt="slider3" data-transition="slideInLeft">
			                <% end %>
			              <% end %>
			            </div>
			        </div>
			
			    </div>
			    <script type="text/javascript" src="scripts/jquery.nivo.slider.js"></script>
			    <script type="text/javascript">
			    $(window).load(function() {
			        $('#slider').nivoSlider();
			    });			    
			    </script>
			    
			<% end %>
		<div id="content" class="container padTop">
			<%= yield %>
		</div>
	</div>
	<footer class="">
		<p class="marginTop"><!--&copy; Copyright Tomorrow Pictures Inc.--></p>
	</footer>
